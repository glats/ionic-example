<?xml version='1.0' encoding='utf-8'?>
<widget id="cl.karibu.volta" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>volta</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <platform name="android">
        <splash density="ldpi" src="res/android/drawable-hdpi/background.9.png" />
        <splash density="mdpi" src="res/android/drawable-mdpi/background.9.png" />
        <splash density="hdpi" src="res/android/drawable-hdpi/background.9.png" />
        <splash density="xhdpi" src="res/android/drawable-xhdpi/background.9.png" />
        <icon density="ldpi" src="res/android/drawable-hdpi/appicon.png" />
        <icon density="mdpi" src="res/android/drawable-mdpi/appicon.png" />
        <icon density="hdpi" src="res/android/drawable-hdpi/appicon.png" />
        <icon density="xhdpi" src="res/android/drawable-xhdpi/appicon.png" />
    </platform>
    <platform name="ios">
        <splash height="480" src="res/ios/iphone/Default@2x.png" width="320" />
        <splash height="960" src="res/ios/iphone/Default@2x.png" width="640" />
        <splash height="1024" src="res/ios/iphone/Default-Portrait.png" width="768" />
        <splash height="2048" src="res/ios/iphone/Default-Portrait@2x.png" width="1536" />
        <splash height="768" src="res/ios/iphone/Default-Landscape.png" width="1024" />
        <splash height="1536" src="res/ios/iphone/Default-Landscape@2x.png" width="2048" />
        <splash height="1136" src="res/ios/iphone/Default-568h@2x.png" width="640" />
        <splash height="1334" src="res/ios/iphone/Default-667h@2x.png" width="750" />
        <splash height="2208" src="res/ios/iphone/Default-Portrait-736h@3x.png" width="1242" />
    </platform>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="ios" spec="~4.5.1" />
    <engine name="android" spec="~6.2.2" />
    <plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.4" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.3.0" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.4" />
</widget>
